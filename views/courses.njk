{% extends "layout.njk" %}

{% block head %}
        <title>Courses</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="icon" href="https://raw.githubusercontent.com/rocketseat-education/bootcamp-launchbase-desafios-02/master/desafios/favicon.ico" type="image/x-icon" />
        <link rel="stylesheet" href="styleDesafio.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
{% endblock head %}


{% block content %}

<h1 style="text-align: center; margin:20px 2px;">Conte√∫dos</h1>

<section class="cards">

    {% for item in items %}
    <div class="card">
        <a id="content_card" href="{{item.url}}" target="_blank">
        <div class="card__image-container">
            <img src="{{item.image_url}}" alt="Imagem de {{item.content}}">
        </div>
        <div class="card__content">
            <p>{{item.content}}</p>
        </div>
        <div class="card__info">
            <p id="tempo-leitura">{{item.time}}</p>
            <p class="card__price">{{item.price}}</p>
        </div>
        </a>
    </div>
    {% endfor %}

</section>

<div class="modal-overlay">
    <div class="modal">
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>

        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>

    </div>
</div>

<!--<script src="scripts.js"></script>-->



{% endblock content %}
